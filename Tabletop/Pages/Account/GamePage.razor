@page "/Account/Games/{gameId:int}"
@attribute [Authorize]
@inject GameService gameService
@inject IStringLocalizer<App> localizer

<PageTitle>@localizer["TABLEBRICKS"] - @localizer["GAME"]</PageTitle>

@if (Input != null)
{
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>@Input.Name</h2>
            </div>
        </div>
        <div class="card">
            <div class="row">
                <div class="col-4">
                    <h4>Team 1</h4>
                </div>
                <div class="col-4">
                    <h4>VS</h4>
                    <p>@AppdataService.Gamemodes.FirstOrDefault(x => x.GamemodeId == Input.GamemodeId)?.GetLocalization(CultureInfo.CurrentCulture)?.Name</p>
                </div>
                <div class="col-4">
                    <h4>Team 2</h4>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <PageTitle>@localizer["TABLEBRICKS"] - Game not found</PageTitle>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>@localizer["ERROR"]</h2>
                <p>Game not found</p>
            </div>
        </div>
    </div>
}