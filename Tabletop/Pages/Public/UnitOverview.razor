@page "/Fractions/{FractionName}"
@inject NavigationManager navigationManager
@inject IStringLocalizer<App> localizer

<PageTitle>@localizer["TABLEBRICKS"] - @Fraction.GetLocalization(CultureInfo.CurrentCulture)?.Name</PageTitle>

<div class="container">
    <div class="card">
        <div class="card-header ps-4 pe-4">
            <div class="d-flex justify-content-between align-items-center">
                <h2>@Fraction.GetLocalization(CultureInfo.CurrentCulture)?.Name</h2>
                <a href="@($"/Fractions")"><button type="button" class="btn btn-dark mt-1">Back</button></a>
            </div>
            <div>
                <p>@Fraction.GetLocalization(CultureInfo.CurrentCulture)?.Description</p>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var unit in List)
        {
            <div class="col-12 col-sm-6 col-lg-4 col-xxl-3 pb-4">
                <div class="card h-100">
                    @if (unit.ConvertedImage != string.Empty)
                    {
                        <a href="/Fractions/@Fraction.GetLocalization(AppdataService.SupportedCultures[0])?.ShortName/@unit.UnitId">
                            <img src="@unit.ConvertedImage" class="img-fluid mx-auto d-block" style="max-height: 300px;" alt="@unit.GetLocalization(CultureInfo.CurrentCulture)?.Name">
                        </a>
                    }
                    <div class="card-header ps-4 pe-4">
                        <h4 class="card-title">@unit.GetLocalization(CultureInfo.CurrentCulture)?.Name</h4>
                    </div>
                    <div class="card-body d-flex flex-column ps-4 pe-4">
                        <a href="/Fractions/@Fraction.GetLocalization(AppdataService.SupportedCultures[0])?.ShortName/@unit.UnitId" class="btn btn-primary mt-auto">@localizer["MORE"]</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
