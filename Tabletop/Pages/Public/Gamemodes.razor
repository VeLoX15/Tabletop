@page "/Gamemodes"
@inject NavigationManager navigationManager
@inject IStringLocalizer<App> localizer

<PageTitle>@localizer["TABLEBRICKS"] - @localizer["GAME_MODES"]</PageTitle>

<div class="container">
    <div class="card">
        <div class="card-header ps-4">
            <h2>@localizer["GAME_MODES"]</h2>
            <p>@localizer["GAME_MODES_DESCRIPTION"]</p>
        </div>
    </div>
    <div class="row justify-content-center">
        @foreach (var gamemode in List)
        {
            <div class="col-lg-6 pb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h4 class="card-title ps-2">@gamemode.GetLocalization(CultureInfo.CurrentCulture)?.Name</h4>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <p class="card-text">@gamemode.GetLocalization(CultureInfo.CurrentCulture)?.Description</p>
                        <a href="@($"/Gamemodes/{gamemode.GetLocalization(CultureInfo.CurrentCulture)?.Name}")" class="btn btn-primary mt-auto">Learn more</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>