@page "/Fractions"
@inject NavigationManager navigationManager
<PageTitle>Tablebricks - Fractions</PageTitle>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Fractions</h2>
            <p>Join one of the powerful armies in the galaxy and fight for supremacy in epic land battles.</p>
        </div>
    </div>
    <div class="row justify-content-center">
        @foreach (var fraction in List)
        {
            <div class="col-lg-6 pb-4">
                <div class="card h-100">
                    <a href="@($"/Fractions/{fraction.ShortName}")">
                        <img src="@fraction.ConvertedImage" class="card-img-top">
                    </a>
                    <div class="card-header ps-4">
                        <h4 class="card-title">@fraction.Name</h4>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <p class="card-text" style="text-align: justify">@fraction.Description</p>
                        <a href="@($"/Fractions/{fraction.ShortName}")" class="btn btn-primary mt-auto">More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>