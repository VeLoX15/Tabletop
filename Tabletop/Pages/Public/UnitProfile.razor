@page "/Fractions/{FractionName}/{UnitId:int}"
@inject IStringLocalizer<App> localizer

@if (Unit != null)
{
    <PageTitle>@localizer["TABLEBRICKS"] - @Unit.GetLocalization(CultureInfo.CurrentCulture)?.Name</PageTitle>

    <div class="container">
        <div class="card">
            <div class="card-header ps-4 pe-4">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>@Unit.GetLocalization(CultureInfo.CurrentCulture)?.Name</h2>
                    <a href="@($"/Fractions/{AppdataService.Fractions.FirstOrDefault(x => x.FractionId == Unit.FractionId)?.GetLocalization(AppdataService.SupportedCultures[0])?.ShortName}")"><button type="button" class="btn btn-dark mt-1">Back</button></a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4 text-center justify-content-center">
                        <img src="@Unit.ConvertedImage" class="rounded" style="max-height: 300px;">
                    </div>
                    <div class="col-lg-8">
                        <div>
                            <h4>@localizer["DESCRIPTION"]</h4>
                            <p>@Unit.GetLocalization(CultureInfo.CurrentCulture)?.Description</p>
                        </div>
                        <div>
                            <h4>@localizer["GAME_MECHANIC"]</h4>
                            <p>@Unit.GetLocalization(CultureInfo.CurrentCulture)?.Mechanic</p>
                            <h6>@Unit.FirstAbility?.GetLocalization(CultureInfo.CurrentCulture)?.Name</h6>
                            <p>@Unit.FirstAbility?.GetLocalization(CultureInfo.CurrentCulture)?.Mechanic</p>
                            <h6>@Unit.SecondAbility?.GetLocalization(CultureInfo.CurrentCulture)?.Name</h6>
                            <p>@Unit.SecondAbility?.GetLocalization(CultureInfo.CurrentCulture)?.Mechanic</p>
                            <h6>@localizer["TROOP_CATEGORY"]: @Unit.Class?.GetLocalization(CultureInfo.CurrentCulture)?.Name</h6>
                        </div>
                    </div>
                </div>
                <div class="row pt-4">
                    <div class="col-lg-4">
                        <h4>@localizer["UNIT_VALUES"]</h4>
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th>D</th>
                                    <th>M</th>
                                    <th>F</th>
                                    <th>S</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Unit.Defense</td>
                                    <td>@Unit.Moving</td>
                                    <td>@Unit.Force</td>
                                    <td>@Unit.TroopQuantity</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    @if (Unit.PrimaryWeapon != null)
                    {
                        <div class="col-lg-4">
                            <h4>@Unit.PrimaryWeapon.GetLocalization(CultureInfo.CurrentCulture)?.Name</h4>
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>A</th>
                                        <th>Q</th>
                                        <th>R</th>
                                        <th>D</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Unit.PrimaryWeapon.Attack</td>
                                        @if (Unit.FirstAbility != null && Unit.FirstAbility?.Quality != 0)
                                        {
                                            <td>@Unit.PrimaryWeapon.Quality+@Unit.FirstAbility?.Quality</td>
                                        }
                                        else if (Unit.SecondAbility != null && Unit.SecondAbility?.Quality != 0)
                                        {
                                            <td>@Unit.PrimaryWeapon.Quality+@Unit.SecondAbility?.Quality</td>
                                        }
                                        else
                                        {
                                            <td>@Unit.PrimaryWeapon.Quality</td>
                                        }
                                        <td>@Unit.PrimaryWeapon.Range</td>
                                        <td>@Unit.PrimaryWeapon.Dices</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                    @if (Unit.SecondaryWeapon != null)
                    {
                        <div class="col-lg-4">
                            <h4>@Unit.SecondaryWeapon.GetLocalization(CultureInfo.CurrentCulture)?.Name</h4>
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>A</th>
                                        <th>Q</th>
                                        <th>R</th>
                                        <th>D</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Unit.SecondaryWeapon.Attack</td>
                                        @if (Unit.FirstAbility != null && Unit.FirstAbility?.Quality != 0)
                                        {
                                            <td>@Unit.SecondaryWeapon.Quality+@Unit.FirstAbility?.Quality</td>
                                        }
                                        else if (Unit.SecondAbility != null && Unit.SecondAbility?.Quality != 0)
                                        {
                                            <td>@Unit.SecondaryWeapon.Quality+@Unit.SecondAbility?.Quality</td>
                                        }
                                        else
                                        {
                                            <td>@Unit.SecondaryWeapon.Quality</td>
                                        }
                                        <td>@Unit.SecondaryWeapon.Range</td>
                                        <td>@Unit.SecondaryWeapon.Dices</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <PageTitle>@localizer["TABLEBRICKS"] - @localizer["UNIT"] @localizer["NOT_FOUND"]</PageTitle>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>@localizer["ERROR"]</h2>
                <p>@localizer["UNIT"] @localizer["NOT_FOUND"]</p>
            </div>
        </div>
    </div>
}
