@page "/Administration/Units"
@attribute [Authorize(Roles = Roles.VIEW_UNITS)]
@inherits ManagementBasePage<Unit, UnitService>
@inject IStringLocalizer<App> localizer

<PageTitle>@localizer["TABLEBRICKS"] - @localizer["UNITS"] (@localizer["MANAGEMENT"])</PageTitle>

<div class="container">
    <div class="card">
        <div class="card-header ps-4 pe-4">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h2>Unit Management</h2>
                <div class="text-right">
                    <div class="ms-auto">
                        <button type="button" class="btn" @onclick="() => OpenFilter = true"><i class="fa-solid fa-filter fa-xl"></i></button>
                        <AuthorizeView Roles="@(Roles.EDIT_UNITS)">
                            <Authorized>
                                <button type="button" class="btn" @onclick="UpdateAppdata"><i class="fa-solid fa-rotate-right fa-xl"></i></button>
                            </Authorized>
                        </AuthorizeView>
                        <AuthorizeView Roles="@(Roles.ADD_UNITS)">
                            <Authorized>
                                <button type="button" class="btn" @onclick="NewAsync"><i class="fa-solid fa-square-plus fa-xl"></i></button>
                            </Authorized>
                        </AuthorizeView>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-content m-1">
            <div class="table-responsive">
                <table class="table mb-0 table-lg">
                    <thead>
                        <tr>
                            <th>@localizer["NAME"]</th>
                            <th>@localizer["FRACTION"]</th>
                            <th class="text-right">@localizer["ACTION"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <Virtualize Items="Data" Context="unit">
                            <tr>
                                <td class="text-nowrap">
                                    <a style="color: inherit; text-decoration: none;" href="/Fractions/@AppdataService.Fractions.FirstOrDefault(x => x.FractionId == unit.FractionId)?.GetLocalization(CultureInfo.CurrentCulture)?.ShortName/@unit.UnitId">@unit.GetLocalization(CultureInfo.CurrentCulture)?.Name</a>
                                </td>
                                <td class="text-nowrap">
                                    <a style="color: inherit; text-decoration: none;">@AppdataService.Fractions.FirstOrDefault(x => x.FractionId == unit.FractionId)?.GetLocalization(CultureInfo.CurrentCulture)?.ShortName</a>
                                </td>
                                <td class="text-right">
                                    <AuthorizeView Roles="@(Roles.EDIT_UNITS)">
                                        <Authorized>
                                            <span class="pe-1 aktion-icon" role="button" @onclick="async () => await EditAsync(unit)">
                                                <i class="fa-solid fa-pen-to-square"></i>
                                            </span>
                                        </Authorized>
                                    </AuthorizeView>
                                    <AuthorizeView Roles="@(Roles.DELETE_UNITS)">
                                        <Authorized>
                                            <span class="pe-1 aktion-icon" role="button" @onclick="() => SelectedForDeletion = unit">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </span>
                                        </Authorized>
                                    </AuthorizeView>
                                </td>
                            </tr>
                        </Virtualize>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (Input is not null)
{
    var localization = Input.GetLocalization(CultureInfo.CurrentCulture);

    if (localization != null)
    {
        <Modal Title="@String.Format("{0} {1}: {2}", @localizer["EDIT"], @localizer["UNIT"], Input.GetLocalization(CultureInfo.CurrentCulture)?.Name)"
               OnClosed="() => Input = null"
               ModalSize="ModalSize.LG"
               HideFooter="true">

            <EditForm Model="Input" @ref="_form">
                <FluentValidationValidator />
                <div class="row">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <InputText @bind-Value="localization.Name" class="form-control" id="unit-name" placeholder="Name" />
                            <label for="unit-name">@localizer["NAME"]</label>
                            <ValidationMessage For="() => localization.Name" />
                        </div>

                        <div class="form-floating mb-3">
                            <InputSelect id="select-fraction" @bind-Value="Input.FractionId" class="form-control">
                                @if (Input.FractionId == 0)
                                {
                                    <option value="0" selected>@localizer["SELECT_CHOOSE"]</option>
                                }
                                @foreach (Fraction item in AppdataService.Fractions)
                                {
                                    <option value="@item.FractionId">@item.GetLocalization(CultureInfo.CurrentCulture)?.Name</option>
                                }
                            </InputSelect>
                            <label for="select-fraction">@localizer["FRACTION"]</label>
                        </div>

                        <div class="form-floating mb-3">
                            <InputSelect id="select-class" @bind-Value="Input.ClassId" class="form-control">
                                @if (Input.FractionId == 0)
                                {
                                    <option value="0" selected>@localizer["SELECT_CHOOSE"]</option>
                                }
                                @foreach (Class item in AppdataService.Classes)
                                {
                                    <option value="@item.ClassId">@item.GetLocalization(CultureInfo.CurrentCulture)?.Name</option>
                                }
                            </InputSelect>
                            <label for="select-class">@localizer["CLASS"]</label>
                        </div>

                        <div class="form-floating mb-3">
                            <InputTextArea @bind-Value="localization.Description" class="form-control" id="unit-description" placeholder="Description" />
                            <label for="unit-description">@localizer["DESCRIPTION"]</label>
                            <ValidationMessage For="() => localization.Description" />
                        </div>

                        <div class="form-floating mb-3">
                            <InputTextArea @bind-Value="localization.Mechanic" class="form-control" id="unit-mechanic" placeholder="Mechanic" />
                            <label for="unit-mechanic">@localizer["GAME_MECHANIC"]</label>
                            <ValidationMessage For="() => localization.Mechanic" />
                        </div>

                        <div class="mb-3">
                            <InputFile @bind-Value="Input.Image" class="form-control" id="unit-image" placeholder="Image" />
                        </div>

                        <div class="form-floating mb-3">
                            <InputSelect id="unit-defense" @bind-Value="Input.Defense" class="form-control">
                                @if (Input.Defense == 0)
                                {
                                    <option value="0" selected>@localizer["DEFENSE"]</option>
                                }
                                @for (int i = 1; i <= 10; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </InputSelect>
                            <label for="unit-defense">@localizer["DEFENSE"]</label>
                            <ValidationMessage For="() => Input.Defense" />
                        </div>

                        <div class="form-floating mb-3">
                            <InputNumber @bind-Value="Input.Moving" class="form-control" id="unit-moving" placeholder="Moving" />
                            <label for="unit-moving">@localizer["MOVING"]</label>
                            <ValidationMessage For="() => Input.Moving" />
                        </div>

                        <div class="form-floating mb-3">
                            <InputNumber @bind-Value="Input.TroopQuantity" class="form-control" id="unit-moving" placeholder="Moving" />
                            <label for="unit-moving">@localizer["QUANTITY"]</label>
                            <ValidationMessage For="() => Input.TroopQuantity" />
                        </div>

                        <div class="form-floating mb-3">
                            <InputSelect id="select-ability" @bind-Value="Input.FirstAbilityId" class="form-control">
                                <option value="">@localizer["NONE"]</option>
                                @foreach (Ability item in AppdataService.Abilities)
                                {
                                    <option value="@item.AbilityId">@item.GetLocalization(CultureInfo.CurrentCulture)?.Name</option>
                                }
                            </InputSelect>
                            <label for="select-ability">1. @localizer["ABILITY"]</label>
                        </div>

                        <div class="form-floating mb-3">
                            <InputSelect id="select-ability" @bind-Value="Input.SecondAbilityId" class="form-control">
                                <option value="">@localizer["NONE"]</option>
                                @foreach (Ability item in AppdataService.Abilities)
                                {
                                    <option value="@item.AbilityId">@item.GetLocalization(CultureInfo.CurrentCulture)?.Name</option>
                                }
                            </InputSelect>
                            <label for="select-ability">2. @localizer["ABILITY"]</label>
                        </div>

                        <div class="form-floating mb-3">
                            <InputSelect id="select-weapon" @bind-Value="Input.PrimaryWeaponId" class="form-control">
                                <option value="">@localizer["NONE"]</option>
                                @foreach (Weapon item in AppdataService.Weapons)
                                {
                                    <option value="@item.WeaponId">@item.GetLocalization(CultureInfo.CurrentCulture)?.Name</option>
                                }
                            </InputSelect>
                            <label for="select-weapon">@localizer["PRIMARY"] @localizer["WEAPON"]</label>
                        </div>

                        <div class="form-floating mb-3">
                            <InputSelect id="select-weapon" @bind-Value="Input.SecondaryWeaponId" class="form-control">
                                <option value="">@localizer["NONE"]</option>
                                @foreach (Weapon item in AppdataService.Weapons)
                                {
                                    <option value="@item.WeaponId">@item.GetLocalization(CultureInfo.CurrentCulture)?.Name</option>
                                }
                            </InputSelect>
                            <label for="select-weapon">@localizer["SECONDARY"] @localizer["WEAPON"]</label>
                        </div>
                    </div>
                </div>
            </EditForm>

            <div class="toolbar">
                <button type="button" class="btn btn-danger" @onclick="() => Input = null">@localizer["CANCEL"]</button>
                <button type="button" class="btn btn-success" @onclick="SaveAsync">@localizer["SAVE"]</button>
            </div>
        </Modal>
    }
}

@if (SelectedForDeletion is not null)
{
    <ConfirmModal Title="@localizer["DELETE"]"
                  OnClosed="() => SelectedForDeletion = null"
                  OnConfirmed="DeleteAsync">
        <p>@String.Format(localizer["REQUEST_DELETION"])</p>
    </ConfirmModal>
}

@if (OpenFilter)
{
    <Modal Title="@localizer["FILTER"]"
           OnClosed="() => OpenFilter = false"
           ModalSize="ModalSize.LG"
           HideFooter="true">

        <div class="card-content" style="padding: 0 1.3rem;">
            <EditForm Model="Filter" OnValidSubmit="async () => await LoadAsync(true)">
                <div class="form-floating mb-3">
                    <InputText @bind-Value="Filter.SearchPhrase" class="form-control" id="unitmanagement-filter-searchphrase" placeholder="Search users" />
                    <label for="unitmanagement-filter-searchphrase">@localizer["SEARCH"]</label>
                </div>

                <div class="form-floating mb-3">
                    <InputSelect id="select-fraction" @bind-Value="Filter.FractionId" class="form-control">
                        <option value="0" selected>@localizer["SELECT_CHOOSE"]</option>
                        @foreach (Fraction item in AppdataService.Fractions)
                        {
                            <option value="@item.FractionId">@item.GetLocalization(CultureInfo.CurrentCulture)?.Name</option>
                        }
                    </InputSelect>
                    <label for="select-fraction">@localizer["FRACTION"]</label>
                    <ValidationMessage For="() => Filter.FractionId" />
                </div>

                <div class="toolbar">
                    <button type="submit" class="btn btn-primary">@localizer["SEARCH"]</button>
                </div>

            </EditForm>
        </div>

    </Modal>
}