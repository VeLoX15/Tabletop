@page "/Attack_Value_Translator/"
@inject UnitService unitService
@inject IDbProviderService dbProviderService
@inject IJSRuntime jsRuntime
@inject NavigationManager navigationManager

<h3>Probability Calculator</h3>

<EditForm Model="Units" OnValidSubmit="async () => await OnInitializedAsync()">
    <div class="form-group row">
        <label for="attacker-unit" class="col-sm-2 col-form-label">
            Choose a attacker unit:
        </label>
        <div class="col-sm-10">
            <InputSelect id="attacker-unit" @bind-Value="AttackerUnitId" class="form-control">
                @foreach (var unit in Units)
                {
                    <option value="@unit.UnitId">@unit.Name</option>
                }
            </InputSelect>
        </div>
    </div>
    <div class="form-group row">
        <label for="defender-unit" class="col-sm-2 col-form-label">
            Choose a defender unit:
        </label>
        <div class="col-sm-10">
            <InputSelect id="defender-unit" @bind-Value="DefenderUnitId" class="form-control">
                @foreach (var unit in Units)
                {
                    <option value="@unit.UnitId">@unit.Name</option>
                }
            </InputSelect>
        </div>
    </div>
</EditForm>