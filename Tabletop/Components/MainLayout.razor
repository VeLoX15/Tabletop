@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime
@using System.Runtime.InteropServices

<PageTitle>Tablebricks</PageTitle>

<div id="app" class="test">
    <div id="sidebar" class="@(ShowMenu ? "active" : string.Empty)">
        <div class="sidebar-wrapper active">
            <div class="sidebar-header position-relative">
                <div class="d-flex justify-content-between align-items-center">

                    <div role="button" class="sidebar-toggler  x">
                        <span class="sidebar-hide d-xl-none d-block" @onclick="TriggerMenuAsync"><i class="bi bi-x-lg"></i></span>
                    </div>
                </div>
            </div>
            <div class="sidebar-menu">
                <NavMenu />
            </div>
        </div>
    </div>
    <div id="main">

        <header class="mb-3 d-block d-xl-none">
            <span role="button" @onclick="TriggerMenuAsync" class="burger-btn d-block d-xl-none menu-button">
                <i class="bi bi-list"></i>
            </span>
        </header>

        <div class="page-content background">
            <section class="row">
                @Body
            </section>
        </div>

        <footer class="footer py-5">
            <div class="container-fluid">
                <div class="row">
                    <div class="row">
                        <div class="col-lg-3">
                            <h5>About Us</h5>
                            <div class="text-left">
                                <p class="text-justify text-break">We have created a fan-made tabletop game inspired by LEGO Star Wars. For more information, please visit our website and check out our social media channels.</p>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <h5>Contact</h5>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-geo-alt-fill"></i> Kirchplatz 2, 46282 Dorsten, Germany</li>
                                <li><i class="bi bi-envelope-fill"></i> support@tablebricks.com</li>
                                <li><i class="bi bi-phone-fill"></i> +49 157 37952003</li>
                            </ul>
                        </div>
                        <div class="col-lg-3">
                            <h5>Social Media</h5>
                            <ul class="list-inline">
                                <li class="list-inline-item"><a href="#"><i class="bi bi-facebook"></i></a></li>
                                <li class="list-inline-item"><a href="#"><i class="bi bi-twitter"></i></a></li>
                                <li class="list-inline-item"><a href="#"><i class="bi bi-instagram"></i></a></li>
                            </ul>
                        </div>
                        <div class="col-lg-2">
                            <div class="text-center">
                                <p class="text-right">
                                    @DateTime.Now.Year &copy; Tablebricks
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>



@code {

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("blazorHelpers.startUp");
            ShowMenu = await JSRuntime.InvokeAsync<bool>("blazorHelpers.isDesktop");
            StateHasChanged();
        }

        await base.OnAfterRenderAsync(firstRender);
    }

    private async Task TriggerMenuAsync()
    {
        bool isDesktop = await JSRuntime.InvokeAsync<bool>("blazorHelpers.isDesktop");
        ShowMenu = !ShowMenu;
    }

    public bool ShowMenu { get; set; }
}